<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}        
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/followme/node_modules/bootstrap/dist/css/bootstrap.css') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="{{ path('main_route') }}">Follow Me</a>
	    </div>
	
	     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav navbar-right">
	          <li><a href="{{ path('dating') }}">Dating</a></li>
			  <li><a href="{{ path('add') }}">Add</a></li>
	      
					{% if app.session.get('id') %}
						<li class="active"><a href="{{ path('signout') }}">Sign Out<span class="sr-only">(current)</span></a></li>
					    	<li class="dropdown">
								<ul class="dropdown-menu">
										<li><a href="{{ path('dating') }}">Dating</a></li>
										<li><a href="{{ path('add') }}">Add</a></li>
										<li><a href="#">Page 1-3</a></li>
									</ul>
								</li>								
					{% else %}	
						<li class="active"><a href="{{ path('signin') }}">Sign In<span class="sr-only">(current)</span></a></li>
						<li class="active"><a href="{{ path('signup') }}">Sign Up<span class="sr-only">(current)</span></a></li>						
	        {% endif %}      
	     </ul>     
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
    		<main class="col-xs-8 col-xs-offset-2">
        {% block body %}{% endblock %}
        </main>
        {% block javascripts %}{% endblock %}
        <script type="text/javascript" src="{{ asset('bundles/followme/node_modules/jquery/dist/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/followme/node_modules/bootstrap/dist/js/bootstrap.js') }}"></script>        
				</body>
</html>
